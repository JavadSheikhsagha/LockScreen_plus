<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/widget_remove_cv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:backgroundTint="#C9C9C9"
            app:cardCornerRadius="9dp"
            android:layout_marginLeft="2dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="-12dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:backgroundTint="@color/black"
                android:layout_gravity="center"
                app:cardCornerRadius="6dp"
                android:layout_marginHorizontal="4dp"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/widget_back"
            android:layout_width="134dp"
            android:layout_height="62dp"
            android:backgroundTint="#A1A1A1"
            android:layout_marginHorizontal="7dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="6dp">

                <TextView
                    android:id="@+id/widget_calendar_req_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:text="Mon,  Jan 23"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/widget_calendar_req_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:text="No event today"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:text="Your day is clear"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>