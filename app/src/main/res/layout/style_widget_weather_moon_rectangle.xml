<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/widget_remove_cv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:backgroundTint="#C9C9C9"
            app:cardCornerRadius="9dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="-12dp"
            android:layout_marginLeft="2dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:backgroundTint="@color/black"
                android:layout_gravity="center"
                app:cardCornerRadius="6dp"
                android:layout_marginHorizontal="4dp"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/widget_back"
            android:layout_marginHorizontal="7dp"
            android:layout_width="134dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:backgroundTint="#A1A1A1"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="14dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/icon_moon"
                        />

                    <TextView
                        android:id="@+id/widget_weather_req_moon_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_semibold"
                        android:text="First Quarter"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/white"
                        android:textSize="11sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/widget_weather_req_moonrise_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_semibold"
                        android:text="Moonrise 2:38 "
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/widget_weather_req_moonrise_ampm_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_semibold"
                        android:text="PM"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/widget_weather_req_until_moonrise_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_semibold"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="12sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_semibold"
                        android:text="HR"
                        android:textColor="@color/white"
                        android:textSize="10sp" />


                    <TextView
                        android:id="@+id/widget_weather_req_until_moonrise_minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_semibold"
                        android:text="50"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_semibold"
                        android:text="MIN"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>