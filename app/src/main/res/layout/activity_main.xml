<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F6"
    tools:context=".Home.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F6"
        >


        <TextView
            android:id="@+id/setting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Settings"
            android:textColor="#353838"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/notif_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_tv"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <com.romainpiel.shimmer.ShimmerTextView
                    android:id="@+id/shimmer_tv"
                    android:text="Notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#353838"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginLeft="22dp"
                    android:layout_marginVertical="24dp"
                    android:textSize="20sp"
                    app:reflectionColor="#E8E8E8"/>


                <TextView
                    android:id="@+id/notification_top_main_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:text="Off"
                    android:textColor="#353838"
                    android:textSize="16dp" />
                
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="22dp"
                    android:src="@drawable/icon_arrow"
                    android:layout_gravity="center"
                    app:tint="@color/black"
                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textViewq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Add New Wallpaper"
            android:textColor="#353838"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notif_card" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/more_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="22dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="4dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_more"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top_main_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingLeft="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewq" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categorys_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toTopOf="@+id/emojies_rv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_main_rv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/emojies_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="42dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categorys_rv" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>