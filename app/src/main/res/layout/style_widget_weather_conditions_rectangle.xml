<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/widget_remove_cv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:backgroundTint="#C9C9C9"
            app:cardCornerRadius="9dp"
            android:layout_marginLeft="2dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="-12dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:backgroundTint="@color/black"
                android:layout_gravity="center"
                app:cardCornerRadius="6dp"
                android:layout_marginHorizontal="4dp"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/widget_back"
            android:layout_marginHorizontal="7dp"
            android:layout_width="134dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:backgroundTint="#A1A1A1"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="14dp"
                android:paddingTop="6dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/icon_suny_cloudy"
                        />

                    <TextView
                        android:id="@+id/widget_weather_req_temp_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_semibold"
                        android:text="22"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <ImageView
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:src="@drawable/icon_curcle_center_clock"
                        android:layout_marginTop="4dp"
                        />




                </LinearLayout>

                <TextView
                    android:id="@+id/widget_weather_req_clock_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:text="12:08 AM"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/widget_weather_req_h_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_semibold"
                        android:text="H:31"
                        android:textColor="@color/white"
                        android:textSize="13sp" />


                    <ImageView
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:src="@drawable/icon_curcle_center_clock"
                        android:layout_marginTop="4dp"
                        />


                    <TextView
                        android:id="@+id/widget_weather_req_l_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_semibold"
                        android:text="L:18"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:src="@drawable/icon_curcle_center_clock"
                        android:layout_marginTop="4dp"
                        />

                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>