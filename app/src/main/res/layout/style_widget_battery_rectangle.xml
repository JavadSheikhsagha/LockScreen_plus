<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/battery_widget_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/widget_remove_cv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:backgroundTint="#C9C9C9"
                android:layout_marginLeft="2dp"
                app:cardCornerRadius="9dp"
                app:cardElevation="1dp"
                android:layout_marginBottom="-12dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:backgroundTint="@color/black"
                    android:layout_gravity="center"
                    app:cardCornerRadius="6dp"
                    android:layout_marginHorizontal="4dp"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/widget_back"
                android:layout_width="134dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:backgroundTint="#A1A1A1"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginHorizontal="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="6dp"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/img_phone" />

                        <TextView
                            android:id="@+id/widget_battery_precent_rec_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:fontFamily="@font/sf_pro_display_semibold"
                            android:text="%28"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/widget_battery_phone_name_rec_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_display_semibold"
                        android:text="Your Phone"
                        android:layout_marginLeft="14dp"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <com.sasank.roundedhorizontalprogress.RoundedHorizontalProgressBar
                        android:id="@+id/widget_battery_req_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="18dp"
                        android:indeterminate="false"
                        android:maxHeight="12dp"
                        android:minHeight="12dp"
                        android:progress="28"
                        app:backgroundColor="#C6C6C6"
                        app:progressColor="#FFFFFF" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </LinearLayout>

</LinearLayout>