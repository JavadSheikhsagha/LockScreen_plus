<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Emoji.EmojiActivity">

    <ImageView
        android:id="@+id/image_backoo_e"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerSliderEmojie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/top_widget_ll_e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/background_clock"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/top_widget_tv_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="4dp"
            android:fontFamily="@font/sf_pro_text_medium"
            android:text="Wednesday, September 7"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/clock_ll_e"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/background_clock"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_widget_ll_e">

        <TextView
            android:id="@+id/clock_tv_slse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:gravity="center"
            android:text="22:28"
            android:textColor="@color/white"
            android:textSize="90sp" />


    </LinearLayout>


    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/circle_indicator_emoji_slidero"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="54dp"
        app:ci_height="6dp"
        app:ci_width="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    
    <androidx.cardview.widget.CardView
        android:id="@+id/emoji_model_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:backgroundTint="#CC353838"
        app:cardElevation="0dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintStart_toStartOf="@+id/circle_indicator_emoji_slidero"
        app:layout_constraintEnd_toEndOf="@+id/circle_indicator_emoji_slidero"
        app:layout_constraintBottom_toTopOf="@+id/circle_indicator_emoji_slidero"
        >

        <TextView
            android:id="@+id/emoji_model_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMALL GRID"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="4dp"
            android:textColor="#FAFAFA"
            android:fontFamily="@font/sf_pro_display_regular"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cancel_cv_e"
        android:layout_width="70dp"
        android:layout_height="26dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Cancel"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/add_cv_e"
        android:layout_width="70dp"
        android:layout_height="26dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:text="Add"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/widgets_ll_e"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/background_clock"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clock_ll_e">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_widget_ll_e"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/add_widget_ll_text_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/icon_plus"
                    app:layout_constraintBottom_toBottomOf="@+id/textView9"
                    app:layout_constraintEnd_toStartOf="@+id/textView9"
                    app:layout_constraintTop_toTopOf="@+id/textView9" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:text="ADD WIDGETS"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/mirror_cv_e"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#00FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/widgets_ll_e"
        app:layout_constraintEnd_toEndOf="@+id/widgets_ll_e"
        app:layout_constraintStart_toStartOf="@+id/widgets_ll_e"
        app:layout_constraintTop_toTopOf="@+id/widgets_ll_e">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/gifImageViewMirror_e"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            app:lottie_rawRes="@raw/gif_mirror"
            app:lottie_repeatCount="280" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/diamond_e_cv"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginTop="-6dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="@+id/widgets_ll_e"
        app:layout_constraintTop_toTopOf="@+id/widgets_ll_e">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:src="@drawable/icon_dimond" />

    </androidx.cardview.widget.CardView>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/gifImageViewww"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/gif_loading"
        app:lottie_repeatCount="280" />


    <View
        android:id="@+id/dim_back3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".5"
        android:background="@color/black"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dim_backkk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".28"
        android:background="@color/black"
        android:elevation="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/gifImageView222"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/gif_loading"
        app:lottie_repeatCount="280" />

    <ImageView
        android:id="@+id/emoji_se_bsd_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="52dp"
        android:src="@drawable/icon_emoji_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/emoji_bg_bsd_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="52dp"
        android:src="@drawable/icon_emoji_backgroundpng"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>