<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/top_widget_item_ll"
    >
    
    <ImageView
        android:id="@+id/top_widget_items_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center"
        android:src="@drawable/img_weather"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="6dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/top_widgets_items_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:src="@drawable/icon_sunset"
                />

            <TextView
                android:id="@+id/top_widget_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:32PM"
                android:fontFamily="@font/sf_pro_text_medium"
                android:textColor="#FAFAFA"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@+id/top_widget_degree"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:src="@drawable/icon_curcle_center_clock"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/top_widget_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/sf_pro_text_medium"
            android:textColor="#FFFFFF"
            android:alpha=".7"
            android:textSize="14sp"
            />


        <View
            android:id="@+id/underline_top_widget"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C9C9C9"
            android:layout_marginBottom="6dp"
            />


    </LinearLayout>

</LinearLayout>