<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.a2mp.lockscreen">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="com.android.vending.BILLING"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>




    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.LockScreen"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">



        <activity
            android:name=".Emoji.EmojiActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Notification.NotificationActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Home.PurchaseActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".Home.OnBoardingActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home.PermissionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetLockScreen.SetLockScreenMultipleActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LockScreen.ChangeScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:showOnLockScreen="true" />
        <activity
            android:name=".SetLockScreen.SetLockScreenSingleActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyScreens.MyScreensActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LockScreen.LockScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:showOnLockScreen="true" />
        <activity
            android:name=".Home.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <service
            android:name=".LockScreen.LockscreenService"
            android:enabled="true"
            android:exported="true"
            android:process=":myBackgroundServiceProcess" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6545436330357450~5371141989" />

        <receiver android:name=".Notification.BootReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.a2mp.lockscreen.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <service
            android:name=".Notification.LSNotificationListenerService"
            android:enabled="true"
            android:exported="true"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>


    </application>

</manifest>